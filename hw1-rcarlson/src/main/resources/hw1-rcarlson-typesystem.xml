<?xml version="1.0" encoding="UTF-8"?>

<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>hw1-rcarlson-typesystem</name>
    <description/>
    <version>1.0</version>
    <vendor/>
  <types>
    <typeDescription>
      <name>cmu11791.rcarlson.SourceConfidenceAnnotation</name>
      <description>Superclass of all annotations, contains source and confidence score</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>source</name>
          <description>Name of the component that produced the annotation</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>confidence</name>
          <description>Confidence score assigned to the annotation by the source component</description>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>cmu11791.rcarlson.Question</name>
      <description/>
      <supertypeName>cmu11791.rcarlson.SourceConfidenceAnnotation</supertypeName>
    <features>
        <featureDescription>
          <name>questionTextFeatures</name>
          <description/>
          <rangeTypeName>cmu11791.rcarlson.TextFeatures</rangeTypeName>
          </featureDescription>
      <featureDescription>
          <name>Answers</name>
          <description/>
          <rangeTypeName>uima.cas.FSList</rangeTypeName>
          <elementType>cmu11791.rcarlson.Answer</elementType>
          <multipleReferencesAllowed>false</multipleReferencesAllowed>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>cmu11791.rcarlson.Answer</name>
      <description/>
      <supertypeName>cmu11791.rcarlson.SourceConfidenceAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>score</name>
          <description/>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>answerTextFeatures</name>
          <description/>
          <rangeTypeName>cmu11791.rcarlson.TextFeatures</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>cmu11791.rcarlson.NGram</name>
      <description/>
      <supertypeName>cmu11791.rcarlson.SourceConfidenceAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>startIndex</name>
          <description/>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>endIndex</name>
          <description/>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>tokens</name>
          <description/>
          <rangeTypeName>uima.cas.FSList</rangeTypeName>
          <elementType>uima.cas.StringArray</elementType>
          <multipleReferencesAllowed>false</multipleReferencesAllowed>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>cmu11791.rcarlson.TextFeatures</name>
      <description/>
      <supertypeName>cmu11791.rcarlson.SourceConfidenceAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>unigrams</name>
          <description/>
          <rangeTypeName>uima.cas.FSList</rangeTypeName>
          <elementType>cmu11791.rcarlson.NGram</elementType>
          <multipleReferencesAllowed>false</multipleReferencesAllowed>
        </featureDescription>
        <featureDescription>
          <name>bigrams</name>
          <description/>
          <rangeTypeName>uima.cas.FSList</rangeTypeName>
          <elementType>cmu11791.rcarlson.NGram</elementType>
          <multipleReferencesAllowed>false</multipleReferencesAllowed>
        </featureDescription>
        <featureDescription>
          <name>trigrams</name>
          <description/>
          <rangeTypeName>uima.cas.FSList</rangeTypeName>
          <elementType>cmu11791.rcarlson.NGram</elementType>
          <multipleReferencesAllowed>false</multipleReferencesAllowed>
        </featureDescription>
        <featureDescription>
          <name>text</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
